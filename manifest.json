{
  "manifest_version": 2,
  "name"            : "ChromeTask",
  "description"     : "Always tagging web for you..",
  "short_name"      : "chromeTask",
  "version"         : "0.1",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon" : "images/logo.png"
  },
  "permissions": [
    "debugger",
    "storage",
    "tabs"        // to read tabs information
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'"
}
